apiVersion: v1
kind: ConfigMap
metadata:
  name: fluent-bit-config
  namespace: logging
  labels:
    k8s-app: fluent-bit
data:
  fluent-bit.conf: |
    [SERVICE]
        Flush        5
        Daemon       Off
        Log_Level    info
        Parsers_File parsers.conf

    @INCLUDE input.conf
    @INCLUDE filter.conf
    @INCLUDE output.conf

  input.conf: |
    [INPUT]
        Name       cpu
        Tag        cpu.local
        Parser     cpu_parser

  filter.conf: |
    [FILTER]
        Name          modify
        Match         *
        Rename        timestamp @timestamp

  output.conf: |
    [OUTPUT]
        Name            es
        Match           *
        Host            ${OPENSEARCH_HOST}
        Port            ${OPENSEARCH_PORT}
        Index           fluent-bit
        Type            _doc
        HTTP_User       ${OPENSEARCH_USERNAME}
        HTTP_Passwd     ${OPENSEARCH_PASSWORD}
        Logstash_Format On
        Replace_Dots    On
        Retry_Limit     False

  parsers.conf: |
    [PARSER]
        Name        cpu_parser
        Format      json
        Time_Key    timestamp
        Time_Format %s.%L
        Time_Key_Keep On
